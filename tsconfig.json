{ 
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "sourceMap": true,
    "outDir": "dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}